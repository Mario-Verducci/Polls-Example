@page "/polls/{id:int}"
@model PollsEditModel
@{
    ViewData["Title"] = "Home page";
}
<h3>@Model.Poll.Question</h3>
<hr />
<div class="row">
    <div class="col-sm-3">
        <form method="post">
            <input type="hidden" name="PollId" value="@Model.Poll.Id" />
            <label for="AnswerText" class="form-label">Answer</label>

            <input class="form-control form-control-sm mb-1" type="text" name="AnswerText" />
            <div class="d-grid gap-2">
                <button class="btn btn-success mt-1 btn" type="submit">Add new Poll</button>
            </div>
        </form>
    </div>

    <div class="col-sm-9">
        <table class="table table-hover table-striped table-sm">
            <thead class="fw-bold table-primary">
                <tr>
                    <td>Answer</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var answer in Model.Poll?.Answers)
                {
                    <tr class='clickable-row' data-href='#'>
                        <td>@answer.AnswerText</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


